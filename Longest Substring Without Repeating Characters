#include <string.h>

int lengthOfLongestSubstring(char* s) {
    int lastIndex[256];  // ASCII chars map to last seen index
    for (int i = 0; i < 256; i++) lastIndex[i] = -1;

    int maxLen = 0;
    int start = 0;  // start of current substring without repeats

    for (int i = 0; s[i] != '\0'; i++) {
        unsigned char c = (unsigned char)s[i];
        if (lastIndex[c] >= start) {
            // Character repeated within current substring
            start = lastIndex[c] + 1;
        }
        lastIndex[c] = i;
        if (i - start + 1 > maxLen) maxLen = i - start + 1;
    }

    return maxLen;
}
